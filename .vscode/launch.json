{
    "version": "2.0.0",
    "configurations": [
        {
            "name": "Launch",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${config:godotTools.editorPath.godot4}",
            "args": [
                "--path", 
                "${workspaceRoot}/KOKTKaraokeParty"
            ],
            "stopAtEntry": false
        },
        {
            "name": "Launch (Select Scene)",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${config:godotTools.editorPath.godot4}",
            "args": [
                "--path",
                "${workspaceRoot}/KOKTKaraokeParty",
                "${command:godot.csharp.getLaunchScene}"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/KOKTKaraokeParty",
            "console": "internalConsole"
        },
        {
            "name": "Auto Attach",
            "type": "godot-mono",
            "request": "attach",
            "address": "localhost",
            "port": 6007
        },
        {
            "name": "Attach",
            "type": "coreclr",
            "request": "attach"
        },
        {
            "name": "Launch in Editor",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${config:godotTools.editorPath.godot4}",
            "args": [
                "--path", 
                "${workspaceRoot}/KOKTKaraokeParty",
                 "--editor"
            ],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "console": "internalConsole"
        },
        {
            "name": "ðŸ§ª Debug Tests",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${config:godotTools.editorPath.godot4}",
            "args": [
                // These command line flags are used by GoDotTest to run tests.
                "--run-tests",
                "--headless",
                "--quit-on-finish"
            ],
            "cwd": "${workspaceFolder}/KOKTKaraokeParty.Tests",
            "stopAtEntry": false
        },
        {
            "name": "ðŸ”¬ Debug Current Test",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${config:godotTools.editorPath.godot4}",
            "args": [
                // These command line flags are used by GoDotTest to run tests.
                "--run-tests=${fileBasenameNoExtension}",
                "--quit-on-finish"
            ],
            "cwd": "${workspaceFolder}/KOKTKaraokeParty.Tests",
            "stopAtEntry": false
        }
    ]
}
